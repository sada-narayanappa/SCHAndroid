<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_patient_inhaler_data"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.geospaces.schas.ViewPatientInhalerData">

    <TextView
        android:text="Patient Inhaler Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight=".5"
        android:layout_margin="5dip"
        android:gravity="center"
        android:textSize="30sp"
        tools:textColor="@color/ColorPrimaryText" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/inhalerDataGraph"
        android:layout_weight="1"
        android:layout_margin="5dip" />

</LinearLayout>
