<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.geospaces.schas.UploadData">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/uploaded">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/statusText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.73"
            android:background="@android:color/holo_orange_dark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gridLayout"
            android:background="#ffebff66"
            android:id="@+id/linearLayout2">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Start Service"
                android:id="@+id/serviceButton"
                android:layout_toRightOf="@+id/uploaded"
                android:layout_toEndOf="@+id/uploaded" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="updateStatus"
                android:id="@+id/updateStatus"
                android:layout_below="@+id/uploadButton"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:id="@+id/uploadButton" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Inhaler\nUse"
                android:id="@+id/inhlaerButton"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Inhaler Used "
                android:id="@+id/inhalerText"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="2" />

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Peak Flow\nUse"
                android:id="@+id/PFMButton"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Peak Flow Used "
                android:id="@+id/PFMtextView"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Medication\n Use"
                android:id="@+id/medButton"
                android:layout_row="2"
                android:layout_column="0" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="medication Used \ntype in medicine name"
                android:id="@+id/medText"
                android:layout_row="2"
                android:layout_column="2" />

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="My Name"
                android:id="@+id/myNameButton"
                android:layout_row="3"
                android:layout_column="0" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="your Name"
                android:id="@+id/myName"
                android:layout_row="3"
                android:layout_column="2" />

        </GridLayout>



    </LinearLayout>

</RelativeLayout>
