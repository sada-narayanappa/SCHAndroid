<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.geospaces.schas.UploadData">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/uploaded">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/statusText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.73"
            android:background="@android:color/holo_orange_dark"
            android:maxLines="1000"
             />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gridLayout"
            android:background="#ffebff66"
            android:id="@+id/linearLayout2">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Start Service"
                android:id="@+id/serviceButton"
                android:layout_toRightOf="@+id/uploaded"
                android:layout_toEndOf="@+id/uploaded"
                android:background="#ff00ff00" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="updateStatus"
                android:id="@+id/updateStatus"
                android:layout_below="@+id/uploadButton"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:id="@+id/uploadButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gridLayout"
            android:background="#ffebff66"
            android:id="@+id/linearLayout3">

            <Button
                style="@android:style/Animation.Toast"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MILD\nATTACK"
                android:id="@+id/attack1"
                android:layout_toRightOf="@+id/uploaded"
                android:layout_toEndOf="@+id/uploaded"
                android:background="@android:drawable/btn_default" />

            <Button
                style="@android:style/Animation.Toast"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MEDIUM\nATTACK"
                android:id="@+id/attack2"
                android:layout_below="@+id/uploadButton"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:background="@android:drawable/btn_default" />

            <Button
                style="@android:style/Animation.Toast"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SEVERE\nATTACK"
                android:id="@+id/attack3"
                android:background="@android:drawable/btn_default" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Inhaler\nUse"
                android:id="@+id/inhlaerButton"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Peak Flow\nUse"
                android:id="@+id/PFMButton"
                android:layout_row="0"
                android:layout_column="1" />


            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Medication\n Use"
                android:id="@+id/medButton"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="1" />

            <EditText
                android:layout_width="175dp"
                android:layout_height="52dp"
                android:id="@+id/editText"
                android:layout_gravity="center_horizontal|fill"
                style="@android:style/Holo.ButtonBar"
                android:editable="true"
                android:autoText="false"
                android:background="@android:color/holo_orange_dark"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
            />


        </GridLayout>


    </LinearLayout>

</RelativeLayout>
