<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="org.geospaces.schas.UploadData">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/uploaded"
        android:background="@color/ColorLightPrimary"
        >

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            class="org.geospaces.schas.Fragments.GoogleMaps"
            android:id="@+id/fragment"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/linearLayout2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="#000000">

            <Button
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="Stop"
                android:id="@+id/homeButton"
                android:background="@color/red"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:text="Google\nLocations"
                android:id="@+id/googleLocationsButton"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="#14c53a" />

            <Button
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="Upload"
                android:id="@+id/graphButton"
                android:background="#ffffff"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="RESET\nALL"
                android:id="@+id/resetButton"
                android:layout_margin="5dp"
                android:background="#ffffff" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/linearLayout2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom|right|end"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:weightSum="1">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/inhalerButton"
                android:src="@drawable/ic_inhaler"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                android:visibility="invisible"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/manualPeakflow"
                android:src="@drawable/ic_hand_white_24dp"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                android:visibility="invisible"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/PFMConnectButton"
                android:src="@drawable/ic_peakflow"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                android:visibility="invisible"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/severeAttackButton"
                android:src="@drawable/ic_heart3"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                android:visibility="invisible"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/mediumAttackButton"
                android:src="@drawable/ic_heart2"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                android:visibility="invisible"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/mildAttackButton"
                android:src="@drawable/ic_heart"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                android:visibility="invisible"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/menu_button"
                android:src="@drawable/ic_heart_white"
                app:elevation="8dp"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:borderWidth="0dp"
                app:rippleColor="@android:color/white"
                app:pressedTranslationZ="12dp"
                android:layout_weight="0.04" />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
